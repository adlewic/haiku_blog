<header id="profile_header">
  <h1><%= @user.name.upcase %></h1>
  <div class="follow_counter">
    <span>[#] FOLLOWERS</span>
    <span>[#] FOLLOWING</span>
  </div>
</header>
<section id="posts">
  <!-- POST MODULE -->
  <% @posts.reverse.each do |post| %>
    <div class="post">

      <!-- HAIKU -->
      <div class="post_top"> 
        <p><%= post.line1 %></p>
        <p><%= post.line2 %></p>
        <p><%= post.line3 %></p>
      </div>
      <!-- HAIKU INFO -->
      <div class="post_bottom">
        <!-- <h3><%= post.user.name %></h3> -->
        <div class="like_counter">
          <a href="/like/<%= post.id %>"><img src="/images/swan.svg"></a>
          <% if post.likes != 0 %>
            <span class="divider">|</span>
            <span class="like_num"><%= post.likes %></span>
          <% end %>
        </div>
      </div>
      <!-- EDIT CORNER -->
      <% if current_user.id == post.user.id %>
        <div class="edit_corner">
          <a href="/edit/<%= post.id %>"><img src="edit.svg"></a>
          <a href="/delete/<%= post.id %>"><img src="delete.svg"></a>
        </div>
      <% end %>

    </div>
  <% end %>

</section>